{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "full_workflow_description": {"type": "string"},
        "modules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "module_name": {"type": "string"},
                    "main_function": {
                        "type": "object",
                        "properties": {
                            "name": {"type": "string"},
                            "workflow": {"type": "string"}, 
                            "return": {"type": "string"},
                            "depends_on":{
                                "type":"array",
                                "properties": {
                                    "items":{"type":"string"},
                                   "additionalProperties":false
                                },
                                "additionalProperties":false
                            }
                        },
                        "additionalProperties":false
                    },
                    "functions": {
                        "type":"array",
                        "items": {
                            "type":"object",
                            "properties":{
                                "name": {"type": "string"},
                                "workflow":{"type": "string"},
                                "return":{"type": "string"},
                                "depends_on":{
                                    "type":"array",
                                    "items": {
                                        "type":"string"
                                    },
                                    "additionalProperties":false,
                                    "required": ["name", "workflow", "return", "depends_on"]
                                }
                            },
                            "additionalProperties":false
                        },
                        "additionalProperties":false
                    },
                    "requirements": {
                        "type":"array",
                        "items":{
                            "type":"object",
                            "properties":{
                                "import_name":{"type":"string"},
                                "use_cases": {
                                    "type":"array",
                                    "items":{
                                        "type":"object",
                                        "properties":{
                                            "function": {"type":"string"},
                                            "workflow":{"type":"string"},
                                            "note": {"type":"string"}
                                        },
                                        "additionalProperties":false,
                                        "required": ["function", "workflow", "note"]
                                    },
                                    "additionalProperties":false
                                }
                            },
                            "additionalProperties":false,
                            "required": ["import_name", "use_cases"]
                        },
                        "additionalProperties":false
                    }
                },
                "additionalProperties":false,
                "required": ["module_name", "main_function"]
            },
            "additionalProperties":false
        },
        "dependancy_graph":{
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "function_name": {"type":"string"},
                    "depends_on":{"type":"string"}
                },
                "additionalProperties":false,
                "required": ["function_name", "depends_on"]
            },
            "additionalProperties":false
        }
    },
    "additionalProperties":false,
    "required": ["full_workflow_description", "modules", "dependancy_graph"]
}
